{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "strict": true,
    "target": "ES6",
    "sourceMap": true,
    "outDir": "./lib",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib": ["ES6", "ES2017", "ES2018", "ES2019", "ES2020", "ESNext", "DOM"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/**/*"]
}
