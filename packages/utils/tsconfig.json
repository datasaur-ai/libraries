{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "ES6",
    "sourceMap": true,
    "outDir": "./lib",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib": ["ESNext", "DOM"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/**/*", "src/**/*.spec.ts", "lib/**/*"]
}
